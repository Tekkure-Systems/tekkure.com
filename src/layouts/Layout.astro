---
import { ViewTransitions } from "astro:transitions"
import Tekkure_logo from "../assets/logos/tekkure_profile_light.svg"
import '/src/styles/global.css';
const currentYear = new Date().getFullYear();
---
<html lang="en" class="min-h-full bg-[color:var(--color-primaryBackground-light)] font-[Poppins] text-[color:var(--color-primaryText-light)]">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<title>Tekkure</title>
		<link rel="shortcut icon" href="/dist/img/tekkure_logo.svg" type="image/x-icon">

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<ViewTransitions/>
	</head>
	<div class="flex flex-col min-h-full">
		<header>
			<div class="flex items-center justify-center px-[2.5vw] h-[4.06rem] relative max-w-[25vw] w-[80%] mx-auto navbar">
				<div class="flex items-center absolute justify-between gap-[1.875rem] right-[60%] nav_left">
					<a href="/proyectos" class="text-primary text-lg font-bold no-underline">Proyectos</a>
					<a href="/nosotros" class="text-primary text-lg font-bold">Nosotros</a>
				</div>
				<div class="absolute left-1/2 -translate-x-1/2 logo_navbar">
					<a href="/">
						<Tekkure_logo width="50px"/>
					</a>
				</div>
				<div class="flex items-center absolute justify-between gap-[1.875rem] left-[60%] nav_right">
					<a href="/servicios" class="text-primary font-bold text-lg">Servicios</a>
					<a href="/contacto" class="text-primary font-bold text-lg">Contacto</a>
				</div>
			</div>
		</header>
		<main class="flex-grow p-6 overflow-auto">
			<slot />
		</main>
		<footer class="bg-[color:var(--color-primaryBackground-light)] text-center pb-7.5 h-5 relative">
			<p class="font-bold text-primary text-base">
				Tekkure &copy; <span>{currentYear}</span>
			</p>
		</footer>
	</div>
</html>

<style>
@media screen and (max-width: 48rem) {
  .navbar {
    flex-direction: column;
    height: auto;
    padding: 0.625rem;
  }
  .nav_left, .nav_right {
    position: static;
    justify-content: center;
    gap: 0.9375rem;
  }
  .logo_navbar {
    position: static;
    transform: none;
    margin-bottom: 0.625rem;
  }
}
</style>