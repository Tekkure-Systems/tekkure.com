---

import Layout from "../layouts/Layout.astro";---

<Layout>
    <section>
        <div class="company_contact_section">
            <div>
                <div>
                    <p class="text_weight_bold text_size_big">Localizacion</p>
                    <p>Guadalajara, Jalisco, México.</p>
                </div>
                <div>
                    <p class="text_weight_bold text_size_big">Contacto</p>
                    <p>+52 1234 5678</p>
                    <p>tekkureinc@tekkure.com</p>
                </div>
            </div>

            <div>
                <div>
                    <p class="text_weight_bold text_size_big">Redes Sociales</p>
                    <img src="/dist/img/Instagram.svg" width="25px">
                    <img src="/dist/img/Facebook.svg" width="12px">
                    <img src="/dist/img/Youtube.svg" width="30px">

                </div>
                <div>
                    <p class="text_weight_bold text_size_big">Horario</p>
                    <p>Lun – Vie 00:00 a.m – 00:00 p.m</p>
                    <p>Sab 00:00 a.m – 00:00 p.m/p>
                </div>
            </div>
        </div>
    </section>
    <section class="Gmail">
        <h2 class="subtitulos">nuestro gmail</h2>
        <div class="gmail">
            <p>TekkureInc@gmail.com</p>
        </div>
    </section>
</Layout>

<style>
    .company_contact_section    {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5rem;
    }
    nav {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 10px;
    }

    nav a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-size: 18px;
        transition: color 0.3s;
    }

    nav a:hover {
        color: #ffcc00;
    }

    .wave-section {
        position: relative;
        width: 100%;
        height: 150px; /* Ajusta la altura según sea necesario */
        overflow: hidden;
        background: linear-gradient(to right, #0066ff, #00ccff); /* Asegura que tenga el mismo color de fondo */
    }

    .wave {
        position: absolute;
        width: 100%;
        bottom: 0;
    }

    /* Estilos para las secciones de contacto */
    .githubs {
        margin: 40px auto;
        padding: 20px;
        background: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        width: 80%;
        max-width: 600px;
    }

    .Gmail {
        margin: 40px auto;
        padding: 20px;
        background: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        width: 80%;
        max-width: 600px;
    }

    .subtitulos {
        font-size: 2em;
        color: #333;
        margin-bottom: 10px;
    }

    div.github, div.gmail {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    div.github a {
        color: #0066ff;
        text-decoration: none;
        font-size: 18px;
        transition: color 0.3s;
    }

    div.github a:hover {
        color: #00ccff;
    }

    div.gmail p {
        font-size: 20px;
        color: #0066ff;
    }

    footer {
        background-color: #0066ff;  /* Fondo azul */
        color: white;               /* Texto blanco */
        text-align: center;         /* Centrado del texto */
        padding: 20px;              /* Espaciado interno */
        font-size: 1em;             /* Tamaño de fuente adecuado */
        margin-top: 20px;           /* Añade un pequeño margen superior si lo necesitas */
    }

    footer a {
        color: white;               /* Color blanco para los enlaces */
        text-decoration: none;      /* Quita el subrayado */
        transition: color 0.3s;      /* Efecto suave al cambiar de color */
    }

    footer a:hover {
        color: #ffcc00;             /* Color amarillo al pasar el ratón */
    }


</style>
